<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LayRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mTxtPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|center"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:gravity="left|center"
                android:padding="5dp"
                android:text="Photo"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mTxtVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/mTxtPhoto"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left|center"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:padding="5dp"
                android:text="Video"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mTxtName"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center" />

        <ImageView
            android:id="@+id/mImgProfile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_default" />

        <EditText
            android:id="@+id/mEdtModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_white"
            android:gravity="left|center"
            android:hint="Module name"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mEdtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_white"
            android:gravity="left|center"
            android:hint="Title"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mEdtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_white"
            android:gravity="left|center"
            android:hint="Description"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mBtnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mImgProfile"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_green_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="Take a Photo"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mBtnor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mBtnTakePhoto"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="Or"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mBtnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mBtnor"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_red_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="Open Gallery"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>