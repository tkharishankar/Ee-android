<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/LayRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/topLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/bg_white"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/imgRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/black"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/mTxtRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgRate"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mEdtMailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTxtRate"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:hint="Enter the mail id here"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <View
                android:id="@+id/mViewLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/mEdtMailid"
                android:padding="10dp"
                android:background="@color/light_gray" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLay">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_red_btn"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_green_btn"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/white" />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>