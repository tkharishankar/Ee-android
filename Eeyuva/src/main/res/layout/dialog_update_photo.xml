<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/LayRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mTxtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Change Profile picture"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/mTxtName"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center" />

        <ImageView
            android:id="@+id/mImgProfile"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_default" />

        <TextView
            android:id="@+id/mBtnTakePhoto"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mImgProfile"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_green_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="Take a Photo"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mBtnor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mBtnTakePhoto"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="Or"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mBtnGallery"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mBtnor"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_red_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="Open Gallery"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>