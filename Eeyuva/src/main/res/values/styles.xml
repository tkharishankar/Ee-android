<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>

    </style>

    <style name="RegularRobotoFont">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="BoldRobotoFont">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="progress_style" parent="Base.V11.Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/transparent_orange</item>
    </style>

    <style name="Theme.D1NoTitleDim" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="MyActionButtonStyle" parent="AppTheme">

        <item name="android:padding">5dp</item>

    </style>
</resources>
